    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "cwd": "${workspaceRoot}",
            "executable": "./build/zephyr/zephyr.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "jlink",
            "device": "NRF52840_XXAA",
            "interface": "swd",
            "runToMain": true
        },
        {
            "name": "Attach",
            "cwd": "${workspaceRoot}",
            "executable": "./build/zephyr/zephyr.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "jlink",
            "device": "NRF52840_XXAA",
            "interface": "swd"
        }
    ]
}